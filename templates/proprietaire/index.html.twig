{% extends 'base.html.twig' %}

{% block title %}Gestion des chatons BDD{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Gestion des chatons BDD</h1>
        <table class="table table-striped">
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th></th>
            </tr>
            {% for c in proprietaire %}
                <tr>
                    <td>{{ c.nom }}</td>
                    <td>{{ c.prenom }}</td>
                    <td>
                        <a href="{{path("proprietaire_modifier",{"id":c.id})}}" class="btn btn-primary">modifier</a>
                        <a href="{{path("proprietaire_supprimer",{"id":c.id})}}" class="btn btn-danger">supprimer</a>
                        <a href="{{path("chatonproprietaire_voir",{"idproprietaire":c.id})}}" class="btn btn-warning">chatons</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {{ form(formulaire) }}
{% endblock %}
